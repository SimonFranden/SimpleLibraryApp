@model IEnumerable<SimpleLibraryApp_DataAccess.Models.Customer>

@{
    ViewData["Title"] = "Index";
}

<h3>Customers</h3>
<div class="form-group">
    
    <a asp-action="Create" class="btn btn-success mb-2">+Register new customer</a>
    <form method="get" action="@Url.Action("Index", "Customer")" class="d-flex">       
        <input type="search" name="query" placeholder="Search customers..." class=" form-control me-sm-1">
        <button type="submit" class="btn btn-dark my-2 my-sm-0">Search</button>
    </form>
</div>
<table class="table">
    <thead>
        <tr>
            <th>
                Name
            </th>
            <th>
                Mail adress
            </th>
            <th>
                Phone number
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                    @Html.DisplayFor(modelItem => item.FName) @Html.DisplayFor(modelItem => item.LName)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.MailAdress)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneNumber)
            </td>
            <td>
                <a asp-action="LentBooks" asp-route-id="@item.Id" class="btn btn-primary mb-1">Lent books</a>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning mb-1">Edit</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger mb-1">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
